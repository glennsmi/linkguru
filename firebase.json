{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
    "predeploy": [
      "npm --prefix \"shared\" run build",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
    }
  ],
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/:shortId",
        "function": "redirect"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "auth": {
      "port": 9199
    },
    "functions": {
      "port": 5101
    },
    "firestore": {
      "port": 8180
    },
    "hosting": {
      "port": 5200
    },
    "ui": {
      "enabled": true,
      "port": 4100
    },
    "singleProjectMode": true
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  }
}
